<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory name="session1">
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/logisticsdb</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">root</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.current_session_context_class">thread</property>
        <mapping resource="som/domain/RetailOrderStatus.hbm.xml"/>
        <mapping resource="som/domain/Retailer.hbm.xml"/>
        <mapping resource="som/domain/Wholesaler.hbm.xml"/>
        <mapping resource="som/domain/WholesaleOrderStatus.hbm.xml"/>
        <mapping resource="som/domain/WholesaleOrders.hbm.xml"/>
        <mapping resource="som/domain/WholesaleDelivery.hbm.xml"/>
        <mapping resource="som/domain/RetailerProductsStock.hbm.xml"/>
        <mapping resource="som/domain/WholesalerProductsStock.hbm.xml"/>
        <mapping resource="som/domain/WholesaleProducts.hbm.xml"/>
        <mapping resource="som/domain/RetailerAvailableStockHistory.hbm.xml"/>
        <mapping resource="som/domain/Consumer.hbm.xml"/>
        <mapping resource="som/domain/RetailOrders.hbm.xml"/>
        <mapping resource="som/domain/RetailProducts.hbm.xml"/>
        <mapping resource="som/domain/RetailDelivery.hbm.xml"/>
    </session-factory>
</hibernate-configuration>
